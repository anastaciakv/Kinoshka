<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="trailer"
            type="de.proximity.kinoshka.entity.Trailer" />
    </data>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:drawableStart="@drawable/ic_play_arrow_24dp"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/trailer_padding"
        android:paddingTop="@dimen/trailer_padding"
        android:text="@{trailer.name}"
        android:textSize="@dimen/description_text_size"
        tools:text="Trailer Title" />
</layout>